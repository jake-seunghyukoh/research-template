  "version": "0.2.0",
  "configurations": [
    {
      "name": "Example Experiment",
      "type": "python",
      "request": "launch",
      "program": "experiments/YYMMDD_example_experiment/main.py",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [
        "--run_name",
        "example_run",
        "--config",
        "experiments/YYMMDD_example_experiment/configs/default.yaml"
      ]
    },
    {
      "name": "Main.py",
      "type": "python",
      "request": "launch",
      "program": "src/main.py",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
